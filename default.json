{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base"
	],
	"assigneesFromCodeOwners": true,
	"labels": ["dependencies"],
	"packageRules": [
		{
			"matchDepTypes": ["optionalDependencies"],
			"addLabels": ["optional"]
		},
		{
			"groupName": "dotnet",
			"matchDatasources": ["nuget"]
		},
		{
			"groupName": "actions",
			"matchDatasources": ["github-tags","github-releases"]
		}
	]
}
